<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/overlay"
                android:centerColor="@color/overlay"
                android:centerY="1.0"
                android:endColor="@color/overlay"
                android:angle="270"
                />
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/plaza_secondary"
                    android:centerColor="@color/plaza_secondary"
                    android:centerY="1.0"
                    android:endColor="@color/plaza_secondary"
                    android:angle="270"
                    />
                <corners android:bottomLeftRadius="6dp" android:topLeftRadius="6dp"/>
            </shape>
        </clip>
    </item>
    <!-- android:centerColor="#55652d86"  android:endColor="#33652d86"-->
</layer-list>